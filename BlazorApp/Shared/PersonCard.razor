<style>
    .card-img-top {
        width: 70px;
        height: 70px;
        object-fit: cover;
    }
</style>

<div class="card m-2">
    <div class="card-body">
        <h6 class="card-title text-center">@Organisatie</h6>
        <h6 class="card-subtitle mb-2 text-muted text-center">@Functie</h6>
        <div class="card-text text-center">
            <img class="card-img-top" src="@Foto" alt="Card image cap">
            <h5>@Naam</h5>
        </div>
        <div>
            <h6 class="card-text"><b>ID</b>: <small>@ID</small></h6>
            <h6 class="card-text"><b>Email</b>: <small>@Email</small></h6>
        </div>

    </div>
</div>

@code {
    [Parameter]
    public int ID { get; set; }

    [Parameter]
    public string Naam { get; set; }

    [Parameter]
    public string Foto { get; set; }

    [Parameter]
    public string Functie { get; set; }

    [Parameter]
    public string Organisatie { get; set; }

    [Parameter]
    public string Email { get; set; }

}